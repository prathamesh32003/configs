#!/bin/bash

while true; do
    time=$(/home/knight/.local/share/dwm/dwmstatus/dwmtime)
    date=$(/home/knight/.local/share/dwm/dwmstatus/dwmdate)
    brightness=$(/home/knight/.local/share/dwm/dwmstatus/dwmbrightness)
    volume=$(/home/knight/.local/share/dwm/dwmstatus/dwmvolume)
    cpu=$(/home/knight/.local/share/dwm/dwmstatus/dwmcputemp)
    # ram=$(/home/knight/.local/share/dwm/dwmstatus/dwmram)
    # disk=$(/home/knight/.local/share/dwm/dwmstatus/dwmdisk)
    battery=$(/home/knight/.local/share/dwm/dwmstatus/dwmbattery)

    xsetroot -name " $time | $date | $brightness | $volume | $cpu | $battery" &
    sleep 5
done
